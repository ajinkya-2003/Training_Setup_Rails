<h1>Create New Restaurant</h1>

<%= form_with model: @restaurant, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, required: true %>
  </div>

  <div>
    <%= f.label :location %><br>
    <%= f.text_field :location, required: true %>
  </div>

  <div>
    <%= f.label :cuisine_type %><br>
    <%= f.text_field :cuisine_type, required: true %>
  </div>

  <div>
    <%= f.submit 'Create Restaurant' %>
  </div>
<% end %>
