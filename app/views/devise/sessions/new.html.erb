<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">
    Login as <%= @role&.capitalize || "User" %>
  </h2>

  <!-- Flash alert for login errors -->
  <% if flash[:alert] %>
    <div class="alert alert-danger text-center">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Hidden field to persist role type -->
    <%= f.hidden_field :role_type, value: @role %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%# Show registration links only if not logging in as a specific role %>
    <% unless @role.present? %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
